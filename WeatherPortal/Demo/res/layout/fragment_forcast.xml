                android:background="@color/transparent_black_percent_50"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Low4"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <TextView
                android:id="@+id/d5"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_row="4"
                android:background="@color/transparent_black_percent_50"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="Day5"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <ImageView
                android:id="@+id/d5i"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_row="4"
                android:background="@color/transparent_black_percent_50"
                android:src="@drawable/i28" />

            <TextView
                android:id="@+id/d5h"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_row="4"
                android:background="@color/transparent_black_percent_50"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="High5"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <TextView
                android:id="@+id/d5l"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_row="4"
                android:background="@color/transparent_black_percent_50"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Low5"
                android:textColor="#fff"
                android:textColorHint="#fff" />

        </GridLayout>

        <TextView
            android:id="@+id/forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gridLayout1"
            android:layout_alignLeft="@+id/gridLayout1"
            android:background="@color/transparent_black_percent_50"
            android:fontFamily="sans-serif-light"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:text="Forecast"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ftemp"
            android:layout_alignRight="@+id/forecast"
            android:layout_toRightOf="@+id/ftemp"
            android:fontFamily="sans-serif-light"
            android:gravity="top"
            android:text="°"
            android:textColor="#fff"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/fimage"
            android:layout_width="59dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/fcon"
            android:layout_alignLeft="@+id/ftemp"
            android:src="@drawable/i0" />

        <TextView
            android:id="@+id/ftemp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forecast"
            android:layout_alignLeft="@+id/forecast"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/fcon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/textView1"
            android:layout_toRightOf="@+id/fimage"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Sunnyyyyyy"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="22sp" />

